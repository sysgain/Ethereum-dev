                "remotePeerInfoEndpoint":"[parameters('peerInfoEndpoint')]",
                "remotePeerInfoPrimaryKey":"[parameters('peerInfoPrimaryKey')]",
                "remotePeerInfoDbName":"[parameters('peerInfoDbName')]",
                "remotePeerInfoCollName": "[parameters('peerInfoCollName')]"
            }
        ],
        "apis": {
            "apiVersionDeployments": "2017-05-10",
            "apiVersionNetworkSecurityGroups": "2017-04-01",
            "apiVersionPublicIPAddresses": "2017-04-01",
            "apiVersionLoadBalancers": "2017-04-01",
            "apiVersionVirtualNetworks": "2017-04-01",
            "apiVersionVirtualNetworkGateways": "2017-04-01",
            "apiVersionVirtualMachineScaleSets": "2017-03-30",
            "apiVersionConnections": "2017-04-01",
            "apiVersionDocumentDb": "2016-03-31"
        },
        "vnetName": "[concat(variables('namingInfix'), '-vnet')]",
        "txSubnetName": "[concat(uniqueString(resourceGroup().id, variables('namingInfix')), '-snet-tx')]",
